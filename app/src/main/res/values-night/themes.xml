<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.KalunaFinance" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/background_light</item>

        <!-- Text appearances -->
        <item name="textAppearanceHeadline6">@style/TextAppearance.KalunaFinance.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.KalunaFinance.Subtitle1</item>
        <item name="textAppearanceBody1">@style/TextAppearance.KalunaFinance.Body1</item>

        <!-- Component styles -->
        <item name="materialCardViewStyle">@style/Widget.KalunaFinance.CardView</item>
        <item name="textInputStyle">@style/Widget.KalunaFinance.TextInputLayout</item>
        <item name="materialButtonStyle">@style/Widget.KalunaFinance.Button</item>
    </style>

    <!-- No ActionBar theme -->
    <style name="Theme.KalunaFinance.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Dialog theme -->
    <style name="Theme.KalunaFinance.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/Widget.KalunaFinance.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.KalunaFinance.Button.Text</item>
    </style>
</resources>